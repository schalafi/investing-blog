{
  "name": "Hugo Site",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "HUGO_VERSION": "0.146.0"   // >= 0.146.0
    }
  },
  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": { "label": "Hugo server", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "hugo version",
  "customizations": { "vscode": { "extensions": ["budparr.language-hugo-vscode","esbenp.prettier-vscode"] } }
}